<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here.-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- MIS ESTILOS -->


    <style name="TextInputLayoutWithPrimaryColor" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlNormal">@color/primario3</item>
        <item name="colorControlActivated">@color/secundario2</item>
        <item name="android:textColorHint">@color/primario2</item>
    </style>

    <style name="TextInputLayoutWithPrimaryColorRegister" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="colorControlNormal">@color/primario3</item>
        <item name="colorControlActivated">@color/primario2</item>
        <item name="android:textColorHint">@color/primario2</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/terciario3</item>
        <item name="counterTextColor">@color/primario1</item>
    </style>

    <style name="check_style" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:colorControlActivated">@color/secundario1</item>
        <item name="android:colorControlNormal">@color/secundario2</item>
    </style>
</resources>

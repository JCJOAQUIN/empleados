<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.empleados.EmpleadosFragment">

    <TextView
            android:id="@+id/titregistrar"
            android:text="@string/admin_control"
            android:textColor="@color/secundario1"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    <ScrollView
            android:layout_margin="20dp"
            android:layout_below="@+id/titregistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/subtit_pers"
                    android:gravity="start"
                    android:textColor="@color/terciario2"
                    android:text="@string/personalfiles"
                    android:fontFamily="@font/roboto_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/lynames"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout
                        android:theme="@style/TextInputLayoutWithPrimaryColorRegister"
                        android:layout_width="120dp"
                        android:gravity="start"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/terciario3"
                            android:hint="@string/appaterno"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:theme="@style/TextInputLayoutWithPrimaryColorRegister"
                        android:layout_width="120dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/terciario3"
                            android:hint="@string/amaterno"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:theme="@style/TextInputLayoutWithPrimaryColorRegister"
                        android:layout_width="120dp"
                        android:gravity="end"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/terciario3"
                            android:hint="@string/nombre"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                    android:id="@+id/lyaddres"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                        android:theme="@style/TextInputLayoutWithPrimaryColorRegister"
                        android:gravity="start"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/terciario3"
                            android:inputType="date"
                            android:hint="@string/nacimiento"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:theme="@style/TextInputLayoutWithPrimaryColorRegister"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/terciario3"
                            android:inputType="phone"
                            android:hint="@string/phone"/>
                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:theme="@style/TextInputLayoutWithPrimaryColorRegister"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    app:counterTextColor="@color/primario1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/terciario3"
                        android:hint="@string/direccion"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                    android:id="@+id/subtit_usr"
                    android:gravity="start"
                    android:textColor="@color/terciario2"
                    android:text="@string/userfiles"
                    android:fontFamily="@font/roboto_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:id="@+id/lyuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                        android:theme="@style/TextInputLayoutWithPrimaryColorRegister"
                        app:counterEnabled="true"
                        app:counterMaxLength="15"
                        android:gravity="start"
                        app:counterTextColor="@color/primario1"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/terciario3"
                            android:hint="@string/user"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                        android:theme="@style/TextInputLayoutWithPrimaryColorRegister"
                        app:counterEnabled="true"
                        app:counterMaxLength="20"
                        app:passwordToggleEnabled="true"
                        app:passwordToggleTint="@color/primario2"
                        android:gravity="end"
                        app:counterTextColor="@color/primario1"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPassword"
                            android:textColor="@color/terciario3"
                            android:hint="@string/pass"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                    android:theme="@style/TextInputLayoutWithPrimaryColorRegister"
                    app:counterEnabled="true"
                    app:counterMaxLength="20"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/primario2"
                    android:gravity="end"
                    app:counterTextColor="@color/primario1"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword"
                        android:textColor="@color/terciario3"
                        android:hint="@string/confirmpass"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>


    </ScrollView>
    <Button
            android:background="@drawable/boton_rounded"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:text="@string/btnreg"
            android:textColor="@color/primario"
            android:textSize="18sp"
            android:fontFamily="@font/roboto_bold"
            android:padding="10dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="Start"
            android:id="@+id/button"/>
</RelativeLayout>